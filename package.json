{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "test": "cross-env NODE_ENV=test jest",
        "phpunit": "vendor/bin/phpunit --verbose"
    },
    "devDependencies": {
        "@babel/core": "^7.4.0",
        "@babel/preset-env": "^7.4.2",
        "@vue/test-utils": "^1.0.0-beta.29",
        "axios": "^0.18",
        "babel-jest": "^24.5.0",
        "bulma": "^0.7.2",
        "cross-env": "^5.1",
        "jest": "^24.5.0",
        "jest-serializer-vue": "^2.0.2",
        "laravel-mix": "^6.0.49",
        "lodash": "^4.17.5",
        "resolve-url-loader": "^2.3.1",
        "sass": "^1.91.0",
        "sass-loader": "^16.0.5",
        "vue": "^2.5.17",
        "vue-jest": "^4.0.0-beta.1",
        "vue-loader": "^15.9.8",
        "vue-template-compiler": "^2.6.1",
        "webpack": "^5.101.3"
    },
    "dependencies": {
        "@mdi/svg": "^3.4.93"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ],
    "jest": {
        "roots": [
            "<rootDir>/resources/js/tests/"
        ],
        "moduleFileExtensions": [
            "js",
            "json",
            "vue"
        ],
        "transform": {
            ".*\\.(vue)$": "vue-jest",
            "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
        },
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/$1"
        },
        "snapshotSerializers": [
            "jest-serializer-vue"
        ]
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "modules": false
                }
            ]
        ],
        "env": {
            "test": {
                "presets": [
                    [
                        "@babel/preset-env",
                        {
                            "targets": {
                                "node": "current"
                            }
                        }
                    ]
                ]
            }
        }
    }
}
